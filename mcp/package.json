{
  "name": "ai-face-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for AI Face vector avatar system with mDNS discovery and WebSocket transport",
  "author": "ABIvan-Tech",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ABIvan-Tech/AIFace.git",
    "directory": "mcp"
  },
  "homepage": "https://github.com/ABIvan-Tech/AIFace#readme",
  "bugs": {
    "url": "https://github.com/ABIvan-Tech/AIFace/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ai-face-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "npm run build && node --test tests",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "stdio",
    "websocket",
    "mdns",
    "ai-agent",
    "claude",
    "claude-code",
    "emotions",
    "avatar",
    "vector-rendering"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.1",
    "ws": "^8.14.0",
    "bonjour-service": "^1.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.6.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
